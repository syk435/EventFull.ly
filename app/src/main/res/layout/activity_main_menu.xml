<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zhao.karani.meetme.MainMenu">

    <ScrollView
        android:id="@+id/mainMenuView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView android:id="@+id/appTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/app_name"
                    android:textSize="40sp"
                    android:typeface="sans"
                    android:textColor="#000080"
                    android:shadowColor="#000000"
                    android:shadowRadius="6"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/manageFriendButton"
                    android:layout_width="250dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="14dp"
                    android:text="Manage Friends"
                    android:textSize="22sp"
                    android:onClick="manageFriends"/>

    <Button
        android:id="@+id/addEventButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:text="Add Event"
        android:textSize="22sp"
        android:onClick="addEvent"/>

    <Button
        android:id="@+id/viewEventsButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:text="View Events"
        android:textSize="22sp"
        android:onClick="testMethod"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ongoingEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableRight="@drawable/ic_communication_location_on"
            android:drawableEnd="@drawable/ic_communication_location_on"
            android:layout_gravity="center_horizontal"
            android:text="Ongoing"
            android:onClick="ongoingEvent"
            />

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:drawableRight="@drawable/ic_action_settings"-->
            <!--android:drawableEnd="@drawable/ic_action_settings"-->
            <!--android:text="Settings"-->
            <!--/>-->
        </LinearLayout>
            </LinearLayout>
    </ScrollView>

    </LinearLayout>
