<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zhao.karani.meetme.SignUp">

    <ScrollView
        android:id="@+id/signUpView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView android:id="@+id/appTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:typeface="sans"
                android:textColor="#000080"
                android:shadowColor="#000000"
                android:shadowRadius="6"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/reselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="User with this mail already exists!"
                android:textSize="18sp"
                android:textColor="#880000"
                android:layout_weight="1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/reselect1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Please use a correct email"
                android:textSize="18sp"
                android:textColor="#880000"
                android:layout_weight="1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/reselect2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pease use a longer password"
                android:textSize="18sp"
                android:textColor="#880000"
                android:layout_weight="1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/reselect3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Please use an integer age"
                android:textSize="18sp"
                android:textColor="#880000"
                android:layout_weight="1"
                android:visibility="gone"/>
    <EditText
        android:id="@+id/userEmailSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        android:paddingTop="15dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/userPasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_password"
        android:paddingTop="15dp"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/userNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First and Last Name"
        android:paddingTop="15dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/userCitySignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:paddingTop="15dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/userOccupationSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Occupation"
        android:paddingTop="15dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/userAgeSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:paddingTop="15dp"
        android:maxLines="1"
        android:singleLine="true"/>

    <Button
        android:id="@+id/sign_up2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:onClick="signUp"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
