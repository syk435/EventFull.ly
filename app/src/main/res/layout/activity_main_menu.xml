<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.zhao.karani.meetme.MainMenu">

    <ScrollView
        android:id="@+id/mainMenuView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

                <TextView android:id="@+id/appTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logo"/>

                <Button
                    android:id="@+id/manageFriendButton"
                    android:layout_width="180dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Manage Friends"
                    android:background="#00FFFFFF"
                    android:drawableTop="@drawable/manage_highlight"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:onClick="manageFriends"/>

    <Button
        android:id="@+id/addEventButton"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:drawableTop="@drawable/create_highlight"
        android:text="Create Event"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#00FFFFFF"
        android:onClick="addEvent"/>

    <Button
        android:id="@+id/viewEventsButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:text="Past Events"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:background="#00FFFFFF"
        android:textColor="#FFFFFF"
        android:drawableTop="@drawable/view_highlight"
        android:onClick="testMethod"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ongoingEventButton"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="90dp"
            android:background="#00FFFFFF"
            android:drawableTop="@drawable/ongoing_highlight"
            android:textColor="#FFFFFF"
            android:onClick="ongoingEvent"
            />
        <!--android:drawableRight="@drawable/ic_communication_location_on"-->
        <!--android:drawableEnd="@drawable/ic_communication_location_on"-->
        <!--android:text="Ongoing"-->

        <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            android:textColor="#FFFFFF"
            android:drawableTop="@drawable/setting_highlight"
            />
        <!--android:drawableRight="@drawable/ic_action_settings"-->
        <!--android:drawableEnd="@drawable/ic_action_settings"-->
        <!--android:text="Settings"-->

        </LinearLayout>
            </LinearLayout>
    </ScrollView>

    </LinearLayout>
